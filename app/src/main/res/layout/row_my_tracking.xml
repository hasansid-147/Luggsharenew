<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/con_text"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_90sdp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/edittext_rounded_corners"

    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_location_outline"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/llRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_toEndOf="@+id/img_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvItemname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:textStyle="normal"
            android:text="Delivery Name" />

        <TextView
            android:id="@+id/tvItemNamevalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#9e9e9e"
            android:textSize="@dimen/_12ssp"
            tools:text="975 16th St, San Francisco, CA 94107" />

        <TextView
            android:id="@+id/tvItemTyp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:textStyle="normal"
            android:text="Item Type:" />

        <TextView
            android:id="@+id/tvItemTypvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/colorPrimary"
            android:textColor="#9e9e9e"
            android:textSize="@dimen/_12ssp"
            tools:text="975 16th St, San Francisco, CA 94107" />




    </LinearLayout>
</RelativeLayout>