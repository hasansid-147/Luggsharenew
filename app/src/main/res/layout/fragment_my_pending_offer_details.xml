<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rlrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btnRate"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="Rate User"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_star_yellow"
            android:layout_alignParentRight="true"

            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llMainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlrate"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        android:layout_margin="@dimen/_15sdp"
        android:background="@drawable/edittext_rounded_corners"
        android:layout_centerHorizontal="true"
        >

        <RelativeLayout
            android:id="@+id/rlone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp">

            <RelativeLayout
                android:id="@+id/rlUsername"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorGrey"
                    />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_13sdp"

                    android:text="Item Name"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/colorBlack"/>
            </RelativeLayout>





            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true" />
            />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlfive"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:padding="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorGrey"
                />

            <TextView
                android:id="@+id/tvItemname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_13sdp"
                android:text="Item"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorBlack"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Item Price"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorGrey"
                />

            <TextView
                android:id="@+id/ItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_13sdp"
                android:text="price"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorBlack"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rltwo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:padding="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick From"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorGrey"
                />

            <TextView
                android:id="@+id/tvTravelingFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_13sdp"
                android:text="Deliver Date"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/colorBlack"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Deliver To"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorGrey"
                />

            <TextView
                android:id="@+id/tvTravelingTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_13sdp"
                android:text="Category"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/colorBlack"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlsix"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp">

            <RelativeLayout
                android:id="@+id/rlUrl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Link"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorGrey"
                    />

                <TextView
                    android:id="@+id/tvUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_13sdp"

                    android:text="Item Name"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/colorBlack"/>
            </RelativeLayout>





            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true" />
            />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlthree"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Date"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorGrey"
                />

            <TextView
                android:id="@+id/tvDeliveryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_13sdp"
                android:text="date"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorBlack"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlfour"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:weightSum="2"
            android:padding="@dimen/_5sdp">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offer Price"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorGrey"
                />

            <TextView
                android:id="@+id/tvOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_13sdp"
                android:text="Status"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14ssp" />


            <ImageView
                android:id="@+id/btnedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_toLeftOf="@+id/vofferprc"

                android:src="@drawable/ic_edit" />

            <View
                android:id="@+id/vofferprc"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Status"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorGrey"
                />

            <TextView
                android:id="@+id/tvOfferstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="status"
                android:textSize="@dimen/_12ssp"

                android:textStyle="italic|bold"
                android:textColor="#0b74a5"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnAcceptOffer"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_25sdp"
        android:text="Send Message"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/llMainContainer"
        />
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="@dimen/_120sdp"
        android:layout_below="@+id/btnAcceptOffer"
        android:background="@drawable/edittext_rounded_corners"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_centerHorizontal="true"

        android:layout_height="wrap_content"

         />

    <Button
        android:id="@+id/btnUpdtStatus"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_25sdp"
        android:text="Update status"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_centerHorizontal="true"

        android:textSize="@dimen/_14ssp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/spinner1"
        />




</RelativeLayout>
