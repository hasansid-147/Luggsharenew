<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/RelLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/btnback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_15sdp"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/tvTopHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Pricing 3/3"
            android:textColor="@color/colorGrey"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTopHeading"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="30sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/llDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtHeading"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtPriceBreakDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Price Summary"
                android:textColor="@color/colorGrey"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPriceBreakDown"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Item Price:"
                android:textColor="@color/colorGrey"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tvItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPriceBreakDown"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_toRightOf="@+id/txtItemPrice"
                android:text=" "
                android:textColor="@color/colorGrey"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtItemPricescurr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPriceBreakDown"
                android:layout_marginStart="13dp"
                android:layout_marginTop="@dimen/_15sdp"

                android:layout_toRightOf="@+id/tvItemPrice"
                android:text="PKR"
                android:textColor="@color/colorGrey"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/btnedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtItemPrice"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_toRightOf="@+id/txtServiceChargescurr"
                android:src="@drawable/ic_edit" />

            <TextView
                android:id="@+id/txtServiceCharges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtItemPrice"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Delivery Charges:"
                android:textColor="@color/colorGrey"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tvServiceCharges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtItemPrice"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_toRightOf="@+id/txtServiceCharges"
                android:text="  "
                android:textColor="@color/colorGrey"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/txtServiceChargescurr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtItemPrice"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="PKR"
                android:layout_toRightOf="@+id/tvServiceCharges"
                android:textColor="@color/colorGrey"
                android:textSize="16sp" />


