<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/con_text"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_115sdp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/border_curved"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvRating"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:textColor="@color/colorBlack"
        android:text="0"
        android:textSize="@dimen/_25sdp"
        android:scaleType="centerInside"
        android:background="@drawable/edittext_rounded_corners"
        android:drawableRight="@drawable/ic_star_yellow"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/llRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toEndOf="@+id/tvRating"
        android:orientation="vertical">



        <TextView
            android:id="@+id/tvComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:textColor="@color/places_autocomplete_error_message"
            android:textStyle="italic"
            android:textSize="@dimen/_13sdp"
            tools:text="empty" />



        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:textStyle="bold"
            android:textColor="#9e9e9e"
            android:textSize="@dimen/_15ssp"
            tools:text="975 16th St, San Francisco, CA 94107" />

        <TextView
            android:id="@+id/tvdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:textColor="#9e9e9e"
            android:textSize="@dimen/_10ssp"
            tools:text="975 16th St, San Francisco, CA 94107" />


    </LinearLayout>
</RelativeLayout>