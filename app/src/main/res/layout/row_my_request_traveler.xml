<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/con_text"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_70sdp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/border_curved"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_avatar_account_setting"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/llRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_toEndOf="@+id/img_icon"

        android:orientation="vertical">



        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="#9e9e9e"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold|italic"
            tools:text="975 16th St, San Francisco, CA 94107" />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtCapacitylabl"
            android:textColor="#9e9e9e"
            android:textSize="@dimen/_10ssp"
            tools:text="975 16th St, San Francisco, CA 94107" />
        <TextView
            android:id="@+id/txtCapacitylabl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            tools:text="Max  " />

</RelativeLayout>

        <TextView
            android:id="@+id/tvProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#212121"
            android:textSize="@dimen/_10ssp"
            android:textStyle="normal"
            tools:text="Snap Fitness" />
    </LinearLayout>
</RelativeLayout>